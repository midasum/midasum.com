---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  date: string;
  category: string;
}

const { title, date, category } = Astro.props;
---

<BaseLayout title={`${title} - midasum`}>
  <article class="container" style="max-width: 768px; margin: 4rem auto; padding: 2rem;">
    <div class="blog-meta">
      <time class="blog-date" datetime={date}>{new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
      <span class="blog-category">{category}</span>
    </div>
    <h1 class="section-title" style="margin-bottom: 2rem;">{title}</h1>
    <div class="blog-excerpt" style="font-size: 1.125rem; line-height: 1.75;">
      <slot />
    </div>
  </article>
</BaseLayout>

