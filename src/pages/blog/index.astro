---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');
const sortedPosts = await Promise.all(
  blogPosts.sort((a, b) => 
    b.data.date.getTime() - a.data.date.getTime()
  ).map(async (post) => {
    // Extract excerpt from raw content (first paragraph)
    const rawBody = post.body;
    const firstParagraph = rawBody.split('\n\n').find(p => p.trim() && !p.trim().startsWith('#')) || '';
    const excerpt = firstParagraph.replace(/[#*`\[\]]/g, '').trim().substring(0, 200) || '';
    
    // Resolve image path
    let imageUrl = null;
    if (post.data.image) {
      try {
        if (post.data.image.startsWith('./')) {
          const imagePath = post.data.image.slice(2);
          const imagePathWithExt = imagePath.includes('.') ? imagePath : `${imagePath}.svg`;
          const imageModule = await import(`../../content/blog/${post.slug}/${imagePathWithExt}?url`);
          imageUrl = imageModule.default;
        } else if (post.data.image.startsWith('/')) {
          const imagePath = post.data.image.slice(1);
          const imagePathWithExt = imagePath.includes('.') ? imagePath : `${imagePath}.svg`;
          const imageModule = await import(`../../content/blog/${imagePathWithExt}?url`);
          imageUrl = imageModule.default;
        } else {
          try {
            const imagePathWithExt = post.data.image.includes('.') ? post.data.image : `${post.data.image}.svg`;
            const imageModule = await import(`../../content/blog/${post.slug}/${imagePathWithExt}?url`);
            imageUrl = imageModule.default;
          } catch {
            imageUrl = post.data.image;
          }
        }
      } catch {
        imageUrl = post.data.image;
      }
    }
    
    return {
      ...post,
      excerpt: excerpt || post.data.title,
      imageUrl: typeof imageUrl === 'string' ? imageUrl : (imageUrl?.src || imageUrl),
    };
  })
);
---

<BaseLayout title="Blog - midasum">
  <section class="hero">
    <div class="container">
      <h1 class="hero-title">Blog</h1>
      <p class="hero-description">
        Thoughts, experiments, and discoveries from ongoing research.
      </p>
    </div>
  </section>

  <section class="blog">
    <div class="container">
      <div class="blog-list">
        {sortedPosts.map((post) => (
          <BlogCard 
            title={post.data.title}
            excerpt={post.excerpt}
            date={post.data.date.toISOString()}
            category={post.data.category}
            slug={post.slug}
            image={post.imageUrl}
          />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

